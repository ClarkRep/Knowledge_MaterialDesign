<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zhaodanyang.knowledge_materialdesign">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".snackbar.SnackbarActivity" />

        <activity
            android:name=".appbarlayout.AppbarLayoutActivity"
            android:theme="@style/AppTheme_StatusBar" />
        <activity
            android:name=".appbarlayout.FlagScrollActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".appbarlayout.FlagEnterAlwaysActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".appbarlayout.FlagEnterAlwaysCollapsedActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".appbarlayout.FlagExitUntilCollapsedActivity"
            android:theme="@style/BaseAppTheme" />
        <activity
            android:name=".appbarlayout.FlagSnapActivity"
            android:theme="@style/BaseAppTheme" />
    </application>

</manifest>